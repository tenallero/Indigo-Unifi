<?xml version="1.0"?>
<PluginConfig>
	<Field id="ipaddress" type="textfield" defaultValue="172.30.74.43">
        <Label>Unifi Controler IP Address:</Label>        
    </Field>
    <Field id="port" type="textfield" defaultValue="8443" >
        <Label>Unifi Controler TCP Port:</Label>       
    </Field>
    <Field id="release" type="textfield" defaultValue="V3" >
        <Label>Unifi Controler release:</Label>       
    </Field>
    <Field id="siteid" type="textfield" defaultValue="default" >
        <Label>Unifi Controler Site ID:</Label>       
    </Field>
    <Field id="useAuthentication" type="checkbox" defaultValue="true">
        <Label>Use authentication:</Label>
    </Field>
    <Field id="username" type="textfield" defaultValue="canteula" visibleBindingId="useAuthentication" visibleBindingValue="true">
        <Label>Username:</Label>                
    </Field>
    <Field id="password" type="textfield" defaultValue="" visibleBindingId="useAuthentication" visibleBindingValue="true">
        <Label>Password:</Label>               
    </Field> 

    <Field id="interval" type="textfield" defaultValue="30" >
        <Label>Refresh interval (sec):</Label>       
    </Field>

	<Field type="checkbox" id="debugEnabled" defaultValue="false">
		<Label>Enable debugging:</Label>
		<Description>(not recommended)</Description>
	</Field>

</PluginConfig>
